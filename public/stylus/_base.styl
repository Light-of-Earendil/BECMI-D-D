// ==========================================================================
// Base Styles
// ==========================================================================

body
  font-family: 'Lora', Georgia, 'Times New Roman', serif
  font-size: 16px
  line-height: 1.5
  color: var(--text-soft)
  background: linear-gradient(90deg, rgba(0,0,0,0.18) 1px, transparent 1px) 0 0/64px 100%, linear-gradient(180deg, rgba(0,0,0,0.18) 1px, transparent 1px) 0 0/100% 64px, linear-gradient(180deg, #4c2e16 0%, #2a1409 80%)
  min-height: 100vh
  background-attachment: fixed

// All headings use Cinzel
h1, h2, h3, h4, h5, h6
  font-family: "Cinzel", Georgia, serif
  font-weight: 600
  color: var(--text-strong)

// All body text uses Lora
p, span, div, li, td, th, label, a
  font-family: 'Lora', Georgia, 'Times New Roman', serif

