// ==========================================================================
// Layout Helpers
// ==========================================================================

.container
  max-width: 1080px
  margin: 0 auto
  padding: var(--space-6)

.stack
  display: flex
  flex-direction: column
  gap: var(--space-3)

.row
  display: flex
  align-items: center
  gap: var(--space-3)
  flex-wrap: wrap

.grid
  display: grid
  gap: var(--space-3)
  grid-template-columns: repeat(auto-fit, minmax(240px, 1fr))
