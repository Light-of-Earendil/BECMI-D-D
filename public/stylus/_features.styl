    text-decoration: underline

.session-details-header
  display: flex
  justify-content: space-between
  align-items: center
  gap: var(--space-4)
  flex-wrap: wrap

  h1
    flex: 1
    min-width: 200px

  .btn-lg
    white-space: nowrap

