  align-items: flex-end

.tool-group
  display: flex
  flex-direction: column
  gap: var(--space-1)

  label
    font-size: 0.85rem
    color: var(--text-soft)
    margin-bottom: var(--space-1)

  .color-picker-container
    display: flex
    flex-direction: column
    gap: var(--space-2)
    
  input[type="color"]
    width: 50px
