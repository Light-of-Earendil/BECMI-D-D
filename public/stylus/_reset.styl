// ==========================================================================
// CSS Reset - Minimal, preserves form controls
// ==========================================================================

*, *::before, *::after
  box-sizing: border-box

html, body
  height: 100%
  margin: 0
  padding: 0

body, h1, h2, h3, h4, h5, h6, p, ul, ol, figure
  margin: 0

ul, ol
  padding: 0
  list-style: none

button, input, textarea, select
  font-family: 'Lora', Georgia, 'Times New Roman', serif

img
  max-width: 100%
  display: block
